{
  "tasks": {
    "deploy": "deno task push && deployctl deploy --env-file=.env --prod",
    "dev": "DENO_ENV=dev deno run --env --allow-env --allow-read --allow-net --watch src/main.ts",
    "generate": "deno --env --node-modules-dir --allow-net --allow-env --allow-read --allow-write --allow-sys --allow-run npm:drizzle-kit generate --config=drizzle-prod.config.ts",
    "push": "deno --env --node-modules-dir --allow-net --allow-env --allow-read --allow-sys --allow-run npm:drizzle-kit push --config=drizzle-prod.config.ts",
    "pull": "deno --env --node-modules-dir --allow-net --allow-env --allow-read --allow-write --allow-sys --allow-run npm:drizzle-kit pull --config=drizzle-prod.config.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@^1.0.11",
    "@types/pg": "npm:@types/pg@^8.11.11",
    "dotenv": "npm:dotenv@^16.4.7",
    "drizzle-kit": "npm:drizzle-kit@^0.30.6",
    "drizzle-orm": "npm:drizzle-orm@^0.41.0",
    "hono": "npm:hono@^4.7.5",
    "jose": "npm:jose@^6.0.10",
    "pg": "npm:pg@^8.14.1"
  },
  "deploy": {
    "project": "hotwings",
    "entrypoint": "src/main.ts",
    "include": ["./src", "./dist", "deno.json", ".env"]  }
}
